        <p>{{ item.name }}: Gross ${{ "%.2f"|format(item.gross) }}, Taxes ${{ "%.2f"|format(item.taxes) }}, Deductions ${{ "%.2f"|format(item.deductions) }}, Net ${{ "%.2f"|format(item.net) }}</p>
    {% endfor %}
    <p>Total Gross: ${{ "%.2f"|format(total_gross) }}, Total Net: ${{ "%.2f"|format(total_net) }}</p>
